---
import '../assets/styles/welcome.scss';

// try doing the script in a react component
---

<div class="welcome">
	<h1>Hello</h1>
	<button id="greet-btn">Get Greeting</button>
</div>

<script>
	import { actions } from "astro:actions";

	const button = document.getElementById('greet-btn');
	button?.addEventListener('click', async () => {
		// Show alert pop-up with greeting from action
		const { data, error } = await actions.getGreeting({ name: 'Peter' });
		console.log(data);
	});
</script>
